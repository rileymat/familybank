{{>header}}
 <div id="wrapper">
        {{>navigation}}
        <div id="page-wrapper">
		  <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header"><i class="fa fa-plus-square fa-fw"></i> Deposit</h1>
                </div>
                <!-- /.col-lg-12 -->
          </div>
		  {{>subpage_nav}}
			<div class="row">
			  <div class="col-lg-3">
				   <div class="panel panel-default">
                        <div class="panel-heading">
                            Deposit to {{name}}
                        </div>
                        <div class="panel-body">
                          <form role="form" action="" method="POST">
							<fieldset>
                              <div class="form-group">
								<label for="amount">Amount</label>
                                  <input name="amount" type="number" placeholder="10.00" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100" class="form-control currency">
                              </div>
							  <div class="row">
								<div class="col-lg-4 col-lg-offset-8">
                                  <button type="submit" name="submit" class="btn btn-lg btn-success btn-block">Deposit</button>
								</div>
							  </div>
							</fieldset>
						  </form>
                        </div>
                    </div>
			  </div>
            </div>
        </div>
    </div>
{{>footer}}
